<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp">

    <android.support.constraint.ConstraintLayout
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/common_question_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="1"
                android:textAlignment="gravity"
                android:textSize="15sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/guideline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_max="300dp"
                app:layout_constraintWidth_percent="0.5"
                tools:text="Mauricio macri fue injustamente incriminado y procesado por la criminalistica"/>


        <TextView
                android:id="@+id/common_question_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:textColor="#013220"
                app:layout_constraintStart_toStartOf="@id/common_question_title"
                app:layout_constraintTop_toBottomOf="@+id/common_question_title"
                tools:text="LA NACION"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>